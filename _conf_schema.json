{
  "server": {
    "description": "FTP服务器连接配置",
    "type": "object",
    "items": {
      "ip": {
        "description": "服务器IP",
        "type": "string"
      },
      "port": {
        "description": "服务器端口",
        "type": "int",
        "default": 21
      },
      "username": {
        "description": "用户名",
        "type": "string"
      },
      "password": {
        "description": "密码",
        "type": "string",
        "obvious_hint": true
      }
    }
  },
  "ftp_root_dir": {
    "description": "FTP根目录（远程）",
    "type": "string",
    "default": "/"
  },
  "base_access_url": {
    "description": "基础访问URL（用于拼接链接）",
    "type": "string",
    "default": ""
  },
  "security": {
    "description": "安全设置",
    "type": "object",
    "items": {
      "ftps_explicit": {
        "description": "显式FTPS（在连接后升级到TLS）",
        "type": "bool",
        "default": false
      },
      "ftps_implicit": {
        "description": "隐式FTPS（直接使用SSL/TLS连接）",
        "type": "bool",
        "default": false
      }
    }
  }
}